@model PIS.GIS.Models.Permohonan

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #sidebar-permohonan {
        min-height: 100vh;
    }
    .breadcrumb{
        background-color: #fff;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div>
                    <div id="sidebar-permohonan" class="bg-gradient-info border-right">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action bg-gradient-info">Permohonan Baru</a>
                            <a href="#" class="list-group-item list-group-item-action bg-gradient-info">Status Permohonan</a>
                        </div>
                    </div>
                </div>
                <!-- right column -->
                <div class="col-md-6 offset-md-2">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Permohonan</h3>
                        </div>
                        <!-- /.card-header -->
                        <form role="form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <ol class="breadcrumb float-sm-right">
                                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                                            <li class="breadcrumb-item"><a href="#">Persempadanan</a></li>
                                            <li class="breadcrumb-item active">Permohonan Baru</li>
                                        </ol>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-7">
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                @Html.LabelFor(model => model.NamaPemohon, htmlAttributes: new { @for = "NamaPemohon" })
                                            </div>
                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.NamaPemohon, new { htmlAttributes = new { @class = "form-control", placeholder = "Nama Pemohon" } })
                                                @Html.ValidationMessageFor(model => model.NamaPemohon, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                @Html.LabelFor(model => model.Emel, htmlAttributes: new { @for = "Emel" })
                                            </div>
                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.Emel, new { htmlAttributes = new { @class = "form-control", placeholder = "Emel" } })
                                                @Html.ValidationMessageFor(model => model.Emel, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                @Html.LabelFor(model => model.IpdKontinjen, htmlAttributes: new { @for = "IpdKontinjen" })
                                            </div>
                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.IpdKontinjen, new { htmlAttributes = new { @class = "form-control", placeholder = "IPD / Kontinjen" } })
                                                @Html.ValidationMessageFor(model => model.IpdKontinjen, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-3">
                                                @Html.LabelFor(model => model.NamaCadangan, htmlAttributes: new { @for = "NamaCadangan" })
                                            </div>
                                            <div class="col-md-9">
                                                @Html.EditorFor(model => model.NamaCadangan, new { htmlAttributes = new { @class = "form-control", placeholder = "Nama Cadangan" } })
                                                @Html.ValidationMessageFor(model => model.NamaCadangan, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-primary">Baru</button>
                            </div>
                        </form>

                        <!-- form start -->

                    </div>
                </div>
            </div>
        </div>
    </section>
}

<div>
    @Html.ActionLink("Kembali", "Index")
</div>
